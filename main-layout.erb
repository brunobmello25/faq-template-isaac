                        <label class="label" for="textarea">Detalhes da sugestÃ£o.</label>
                        <textarea class="message" type='text' name='question[description]' id='question_description'></textarea>
                      </div>
                      
                      {{ captcha_verification }}
                      
                      <div>
                        <input type="submit" id='question_submit' name='commit' value="Enviar sugestÃ£o" class="button">
                      </div>
                      
                    </fieldset>
                    
                </form>
            
              </div>
          </div>
      </div>
    </article>

    <article id="page_content">
      <div class="page_title">
        <div class="wrapper">
          <h1></h1>
        </div>
        
      </div>

      {% if category == null and on_show_question_page != true %}
      {% else %}
      <div class="wrapper">
      {% endif %}
        {% if on_show_question_page %}
          <div class="grid grid_is_level_3 page_is_level_3 js_grid">
          
            <div class="grid_item l_one_quarter grid_item_is_sidebar js_subnav_container" data-set="subnav">
              <div class="subnav" id="js_subnav">
                <h3 class="text_impact subnav_heading">Table of Contents</h3>
                <ul class="grid subnav_list js_subnav_list">
                <!-- load Quick Navigation here -->
                </ul>
              </div>
            </div>
            
            <div id="js_page_content" class="grid_item one_whole l_five_sixths page_content text_block">

        {% endif %}
        
        {% if on_contact_us_page %}
        {% else %}
        <div class="breadcrumbs">
          {% if breadcrumb_root %}
              {% for breadcrumb in breadcrumb_root %}
                <i class="licon-arrowright"></i>
                <a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a>
              {% endfor %}
          {% endif %}
        </div>
        {% endif %}

        {{ content_for_layout }}

        {% if on_show_question_page %}
          </div>
        </div>
        {% endif %}
        
      {% if category == null and on_show_question_page != true %}
