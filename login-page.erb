<!-- Customize the page your users see when they are redirected for authentication -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Helpjuice Login</title>

    {{ helpjuice_authentication_css }}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {{ helpjuice_favicon_tag }}
  </head>
  <body>
    <div class="clean-container">
      <div class="header">
        <img alt="Helpjuice" width="146" src="{{ helpjuice_logo }}" />
      </div>

      <div class="body">
        {% if notice %}
          <p class="success">{{ notice }}</p>
        {% endif %}

        <h1>Welcome Back!</h1>

        <hr>

        <form class="new_user" id="new_user" action="/users/sign_in?_subdomain={{ account.subdomain }}" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="&#x2713;" />
          <input type="hidden" name="fallback_url" id="fallback_url" value="{{ fallback_url }}" />
          <input autofocus="autofocus" placeholder="E-mail" type="text" value="" name="user[email]" id="user_email" /><br>
          <input autocomplete="off" placeholder="Password" type="password" name="user[password]" id="user_password" /><br>

          <input type="submit" name="commit" value="Sign In" class="btn btn-primary" data-disable-with="Sign In" />
        </form>

        {% if error %}
          <p class="error">{{ error }}</p>
        {% endif %}

        <div class="two-cols">
          <div class="col">
            <a class="blue-link" href="/users/password/new?_subdomain={{ account.subdomain }}">Forgot your password?</a>
          </div>
          <div class="col">
            <a class="blue-link" href="/signup">Create a Helpjuice Account</a>
          </div>
        </div>

        <!-- Single Sign on -->
        <a class="btn sso" title="Sign In with Google Apps" href="/users/auth/google">
          <img height="24" src="{{ google_logo }}" alt="Google apps" />
          Google Apps
        </a>

        <a class="btn low-opacity" href="/custom_auth">
          Custom Authentications
        </a>

        <small class='low-opacity'>Single Sign On, LDAP and Active Directory</small>

        <hr>

        <div class="two-cols">
          <div class="col">
            <i class="fa fa-phone"></i>
            +1 (833) 387 3877
          </div>
          <div class="col">
            <i class="fa fa-envelope"></i>
            <a href="mailto:support@helpjuice.com">support@helpjuice.com</a>
          </div>
        </div>
      </div>

      <div class="footer">
        Copyright Â© Helpjuice, Inc.
        2019.
        &nbsp;&nbsp;
        <a href="https://help.helpjuice.com/terms-of-service">Terms</a>
        &nbsp;&nbsp;
        <a href="https://help.helpjuice.com/privacy-policy">Privacy</a>
      </div>
    </div>
  </body>
</html>

